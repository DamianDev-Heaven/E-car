@model ProyectoFinalTecnicas.Models.Auto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Auto</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Fondo general */
        body {
            background: linear-gradient(to bottom right, rgba(239, 244, 255, 0.9), rgba(196, 196, 255, 0.7));
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Tarjeta con efecto glassmorphism */
        .card-glass {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
        }

        .btn-purple {
            background-color: #6f42c1;
            border-color: #6f42c1;
        }

            .btn-purple:hover {
                background-color: #5a32a3;
                border-color: #5a32a3;
            }

        .text-purple {
            color: #6f42c1;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card card-glass p-5">
            <div class="text-center mb-4">
                <h2 class="text-purple fw-bold">Registrar Nuevo Auto</h2>
                <p class="text-muted">Complete la información requerida para registrar un nuevo auto en el sistema.</p>
            </div>
            <form asp-action="Registrar" method="POST" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="modelo" class="form-label fw-bold">Modelo</label>
                        <input type="text" id="modelo" name="Modelo" class="form-control" placeholder="Ingresa el modelo" required>
                    </div>
                    <div class="col-md-6">
                        <label for="marca" class="form-label fw-bold">Marca</label>
                        <input type="text" id="marca" name="Marca" class="form-control" placeholder="Ingresa la marca" required>
                    </div>
                    <div class="col-md-6">
                        <label for="placa" class="form-label fw-bold">Placa</label>
                        <input type="text" id="placa" name="Placa" class="form-control" placeholder="Ingresa la placa" required>
                    </div>
                    <div class="col-md-6">
                        <label for="tipo" class="form-label fw-bold">Tipo</label>
                        <input type="text" id="tipo" name="Tipo" class="form-control" placeholder="Ingresa el tipo" required>
                    </div>
                    <div class="col-md-6">
                        <label for="estado" class="form-label fw-bold">Estado</label>
                        <input type="number" id="estado" name="Estado" class="form-control" placeholder="0 (inactivo) o 1 (activo)" required>
                        <small class="form-text text-muted">El estado debe ser 0 (inactivo) o 1 (activo).</small>
                    </div>
                    <div class="col-md-6">
                        <label for="price" class="form-label fw-bold">Precio/día</label>
                        <input type="number" id="price" name="Price" class="form-control" placeholder="Precio por día" required>
                    </div>
                    <div class="col-12">
                        <label for="image" class="form-label fw-bold">Imagen del Auto</label>
                        <input type="file" id="image" name="Imagen" class="form-control" accept="image/*" required>
                    </div>
                </div>
                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-purple text-white px-5 py-2">
                        Agregar Auto
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            var estado = document.querySelector("#estado").value;

            // Validación de que solo sea 0 o 1
            if (estado !== "0" && estado !== "1") {
                event.preventDefault(); // Detiene el envío del formulario
                alert("El estado debe ser 0 (inactivo) o 1 (activo)."); // Muestra el mensaje de error
                return false;
            }
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
