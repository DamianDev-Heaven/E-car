<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Listado de Autos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Fondo general */
        body {
            background: linear-gradient(to bottom right, rgba(239, 244, 255, 0.9), rgba(196, 196, 255, 0.7));
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .listado-autos {
            max-width: 1200px; /* Ancho máximo para el contenedor */
            width: 100%;
            padding: 20px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
            height: 100%; /* Asegura que las tarjetas no se expandan */
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-img-top {
            width: 100%; /* Asegura que la imagen tenga el ancho completo */
            height: 200px; /* Ajusta la altura para hacerla más pequeña */
            object-fit: cover; /* Mantiene el aspecto correcto de la imagen */
            border-radius: 15px 15px 0 0;
        }

        .card-body {
            padding: 15px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 100%;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            color: #6c757d;
            font-size: 0.9rem; /* Reduce el tamaño de texto */
            margin-bottom: 10px;
        }

        .card-footer {
            background-color: transparent;
            border-top: none;
            text-align: right;
        }

        /* Responsiveness */
        @@media (max-width: 768px) {
            .card-img-top {
                height: 180px;
            }
        }

        @@media (max-width: 480px) {
            .card-img-top {
                height: 150px;
            }
        }
    </style>
</head>
<body>

    <!-- Contenedor con el título y las tarjetas -->
    <div class="listado-autos">
        <h2 class="text-center mb-4">Listado de Autos</h2>

        <!-- Cards de autos -->
        <div class="row">
            @foreach (var auto in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card glass">
                        <img src="@auto.Imagen" alt="Imagen del Auto" class="card-img-top" onerror="this.onerror=null; this.src='/images/default-car.jpg'">
                        <div class="card-body">
                            <h5 class="card-title">@auto.Marca - @auto.Modelo</h5>
                            <p class="card-text"><strong>Placa:</strong> @auto.Placa</p>
                            <p class="card-text"><strong>Tipo:</strong> @auto.Tipo</p>
                            <p class="card-text"><strong>Estado:</strong> @auto.Estado</p>
                            <p class="card-text"><strong>Precio por Día:</strong> @auto.Price</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Disponible para alquiler</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
