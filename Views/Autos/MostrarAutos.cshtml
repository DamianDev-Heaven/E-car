@model IEnumerable<Auto>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Listado de Autos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Fondo general */
        body {
            background: linear-gradient(to bottom right, rgba(239, 244, 255, 0.9), rgba(196, 196, 255, 0.7));
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .listado-autos {
            max-width: 1200px; /* Ancho máximo para el contenedor */
            width: 100%;
            padding: 20px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
            height: 100%; /* Asegura que las tarjetas no se expandan */
            position: relative; /* Para posicionar el menú de opciones */
            overflow: hidden; /* Asegura que el menú no sobresalga */

        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        .card-img-top {
            width: 100%; /* Asegura que la imagen tenga el ancho completo */
            height: 200px; /* Ajusta la altura para hacerla más pequeña */
            object-fit: cover; /* Mantiene el aspecto correcto de la imagen */
            border-radius: 15px 15px 0 0;
        }

        .card a {
            text-decoration: none; /* Quita el subrayado */
            color: inherit; /* Mantiene el color del texto */
        }

        .card-body {
            padding: 15px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 100%;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            color: #6c757d;
            font-size: 0.9rem; /* Reduce el tamaño de texto */
            margin-bottom: 10px;
        }

        .card-footer {
            background-color: transparent;
            border-top: none;
            text-align: right;
        }

        /* Estilos para el menú de opciones */
        .opciones-card {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 9999; /* Asegura que el menú se muestre encima de otros elementos */
        }

        .opciones-btn {
            background: rgba(255,255,255,0.8);
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0;
            color: #6c757d;
            transition: background-color 0.3s ease;
        }

        .opciones-btn:hover {
            background: rgba(255,255,255,1);
        }

        .dropdown-menu {
            min-width: 120px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .dropdown-item {
            display: flex;
            align-items: center;
        }

        .dropdown-item i {
            margin-right: 8px;
        }

        /* Responsiveness */
        @@media (max-width: 768px) {
            .card-img-top {
                height: 180px;
            }
        }

        @@media (max-width: 480px) {
            .card-img-top {
                height: 150px;
            }
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="listado-autos">
        <h2 class="text-center mb-4">Listado de Autos</h2>
        <div class="row">
            @foreach (var auto in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card glass">
                        <div class="opciones-card dropdown">
                            <button class="btn opciones-btn" type="button" id="dropdownMenuButton_@auto.Placa" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton_@auto.Placa">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Edit", new { placa = auto.Placa })">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#eliminarModal_@auto.Placa">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <a href="@Url.Action("Detalles", "Factura", new { placa = auto.Placa })">
                            <img src="@auto.Imagen" alt="Imagen del Auto" class="card-img-top" onerror="this.onerror=null; this.src='/images/default-car.jpg'">
                            <div class="card-body">
                                <h5 class="card-title">@auto.Marca - @auto.Modelo</h5>
                                <p class="card-text"><strong>Placa:</strong> @auto.Placa</p>
                                <p class="card-text"><strong>Tipo:</strong> @auto.Tipo</p>
                                <p class="card-text"><strong>Estado:</strong> @auto.Estado</p>
                                <p class="card-text"><strong>Precio por Día:</strong> @auto.Price</p>
                            </div>
                        </a>


                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
