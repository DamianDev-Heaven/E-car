@model IEnumerable<Auto>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Listado de Autos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            flex-direction: column; /* Cambiar de "center" a permitir más flexibilidad */
            justify-content: flex-start;
            align-items: stretch;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }


        .listado-autos {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            width: 100%;
        }



        .categorias {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .categoria-pill {
            background-color: #e3f2fd;
            border: 1px solid #90caf9;
            color: #1565c0;
            border-radius: 50px;
            padding: 10px 20px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .categoria-pill:hover {
                background-color: #bbdefb;
                color: #0d47a1;
            }

        .buscador {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

            .buscador input {
                width: 50%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 25px;
                outline: none;
                transition: box-shadow 0.3s ease;
            }

                .buscador input:focus {
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
                }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 15px 15px 0 0;
        }

        .card-body {
            padding: 15px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 0.9rem;
            margin-bottom: 10px;
        }

        .estado-alquilable {
            color: green;
            font-weight: bold;
        }

        .estado-no-alquilable {
            color: red;
            font-weight: bold;
        }

        .disabled-card {
            opacity: 0.6; /* Aplica transparencia */
            cursor: not-allowed; /* Muestra un cursor de deshabilitado */
}

    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="listado-autos">
        <div class="buscador">
            <input type="text" id="searchInput" oninput="filtrarAutos()" placeholder="Buscar autos por marca, modelo o placa...">
        </div>

        <div class="categorias">
    <div class="categoria-pill" onclick="mostrarTodos()">Todos</div>
    @foreach (var tipo in Model.Select(a => a.Tipo).Distinct())
    {
        <div class="categoria-pill" onclick="filtrarPorTipo('@tipo')">@tipo</div>
    }
</div>


        <h2 class="text-center mb-4">Listado de Autos</h2>
        <div class="row g-3" id="autoList"> <!-- Se agregó g-3 para gestionar el espacio entre las columnas -->
    @foreach (var auto in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 auto-item" data-tipo="@auto.Tipo">
            @if (auto.Estado == 1)
            {
                <!-- Tarjeta habilitada -->
                <a href="@Url.Action("Detalles", "Factura", new { placa = auto.Placa })" class="card text-decoration-none">
                    <img src="@auto.Imagen" alt="Imagen del Auto" class="card-img-top" onerror="this.onerror=null; this.src='/images/default-car.jpg'">
                    <div class="card-body">
                        <h5 class="card-title">@auto.Marca - @auto.Modelo</h5>
                        <p class="card-text"><strong>Placa:</strong> @auto.Placa</p>
                        <p class="card-text"><strong>Tipo:</strong> @auto.Tipo</p>
                        <p class="card-text">
                            <strong>Estado:</strong>
                            <span class="estado-alquilable">Alquilable</span>
                        </p>
                        <p class="card-text"><strong>Precio por Día:</strong> $@auto.Price</p>
                    </div>
                </a>
            }
            else
            {
                <!-- Tarjeta deshabilitada -->
                <div class="card disabled-card">
                    <img src="@auto.Imagen" alt="Imagen del Auto" class="card-img-top" onerror="this.onerror=null; this.src='/images/default-car.jpg'">
                    <div class="card-body">
                        <h5 class="card-title">@auto.Marca - @auto.Modelo</h5>
                        <p class="card-text"><strong>Placa:</strong> @auto.Placa</p>
                        <p class="card-text"><strong>Tipo:</strong> @auto.Tipo</p>
                        <p class="card-text">
                            <strong>Estado:</strong>
                            <span class="estado-no-alquilable">No alquilable</span>
                        </p>
                        <p class="card-text"><strong>Precio por Día:</strong> $@auto.Price</p>
                    </div>
                </div>
            }
        </div>
    }
</div>

    </div>
    <script>
        function filtrarAutos() {
            const input = document.getElementById('searchInput').value.toLowerCase();
            const autos = document.querySelectorAll('.auto-item');
            autos.forEach(auto => {
                const text = auto.innerText.toLowerCase();
                auto.style.display = text.includes(input) ? '' : 'none';
            });
        }

        function filtrarPorTipo(tipo) {
            const autos = document.querySelectorAll('.auto-item');
            autos.forEach(auto => {
                const autoTipo = auto.getAttribute('data-tipo');
                auto.style.display = autoTipo === tipo ? '' : 'none';
            });
        }
        function mostrarTodos() {
            const autos = document.querySelectorAll('.auto-item');
            autos.forEach(auto => {
            auto.style.display = '';
            });
        }

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
