@model ProyectoFinalTecnicas.Models.Cliente
@{
    Layout = "_LoginLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Clientes</title>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body style="display:flex; align-items:center; justify-content:center;">
    <div class="register-page">
        <div class="register-form-container">
            <form asp-action="Registrar" asp-controller="Login" method="POST" class="register-form">
                <h2>Registro de Clientes</h2>

                <div>

                    <input asp-for="Nombre" class="form-control" placeholder="Nombre *" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div>

                    <input asp-for="Direccion" class="form-control" placeholder="Dirección *" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div>

                    <input asp-for="Telefono" class="form-control" placeholder="Teléfono *" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div>

                    <input asp-for="DUI" class="form-control" placeholder="DUI *" />
                    <span asp-validation-for="DUI" class="text-danger"></span>
                </div>

                <div>

                    <input asp-for="Email" class="form-control" placeholder="Email *" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>

                    <input asp-for="Contrasena" class="form-control" placeholder="Contraseña *" type="password" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-register">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Guardar
                </button>

                <!-- Botón Eliminar -->


            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Poppins, sans-serif;
        background: linear-gradient(white, #b200ff);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        height: 100%;
    }

    /* Contenedor principal */
    .register-page {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        width: 100%;
        max-width: 400px;
        margin: auto;
    }

    .register-form-container {
        text-align: center;
        width: 100%;
        padding: 30px;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
    }

        .register-form-container input {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            color: #fff;
            margin-bottom: 20px;
            border: none;
            border-bottom: 1px solid #fff;
            background: transparent;
            outline: none;
        }

        .register-form-container h2 {
            color: white;
            margin-bottom: 20px;
        }

        .register-form-container .error-message {
            color: red;
            margin-bottom: 15px;
            font-size: 0.9rem;
        }

    /* Botón */
    .btn-register {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        color: #fabeef;
        background: transparent;
        border: 1px solid #fabeef;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.5s;
    }

        .btn-register:hover {
            background: #fabeef;
            color: #fff;
            box-shadow: 0 0 5px #fabeef, 0 0 25px #fabeef, 0 0 50px #fabeef;
        }
</style>
