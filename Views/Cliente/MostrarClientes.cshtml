@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Panel de Administración de Clientes";
}

<div class="container my-5">
    <!-- Encabezado -->
    <div class="bg-primary text-white text-center p-4 rounded glass shadow" style="max-width: 90%; margin: auto; margin-bottom: 30px;">
        <h1>@ViewData["Title"]</h1>
        <p>Gestione todos los clientes registrados fácilmente</p>
    </div>

    <!-- Formulario de búsqueda -->
    <form asp-action="BuscarClientes" method="get" class="d-flex align-items-center gap-2 mb-4">
        <input type="text" name="criterio" placeholder="Buscar cliente por nombre o email..." class="form-control" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
    </form>

    <!-- Tabla de clientes -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>DUI</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center">No se encontraron clientes.</td>
                    </tr>
                }
                else
                {
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.IdCliente</td>
                            <td>@cliente.Nombre</td>
                            <td>@cliente.Direccion</td>
                            <td>@cliente.Telefono</td>
                            <td>@cliente.DUI</td>
                            <td>@cliente.Email</td>
                            <td>
                                <div class="d-flex justify-content-start align-items-center gap-2">
                                    <!-- Botón Editar -->
                                    <a href="@Url.Action("Edit", "Cliente", new { id = cliente.IdCliente })"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>

                                    <!-- Botón Eliminar -->
                                    <form action="@Url.Action("Delete", "Cliente", new { id = cliente.IdCliente })"
                                          method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                onclick="return confirm('¿Estás seguro de que deseas eliminar este cliente?');">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Botón agregar nuevo cliente -->
    <div class="text-end">
        <a href="@Url.Action("Registrar", "Login")" class="btn btn-primary btn-lg">
            <i class="bi bi-person-plus"></i> Nuevo Cliente
        </a>
    </div>
</div>
