@model ProyectoFinalTecnicas.Models.Empleado

<div class="container my-5">
    <!-- Header flotante -->
    <div class="bg-primary text-white text-center p-4 rounded shadow" style="max-width: 90%; margin: auto; margin-bottom: 30px;">
        <h1>Registrar Empleado</h1>
        <p>Ingresa los datos del nuevo empleado.</p>
    </div>

    <!-- Formulario -->
    <form asp-action="Create" method="post" class="shadow p-4 rounded bg-white" style="max-width: 600px; margin: auto;" onsubmit="concatenarEmail()">
        <div class="mb-3">
            <label for="Nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" required />
        </div>

        <div class="mb-3">
            <label for="Telefono" class="form-label">Teléfono</label>
            <input type="text" class="form-control" id="Telefono" name="Telefono" required />
        </div>

        <div class="mb-3">
            <label for="Cargo" class="form-label">Cargo</label>
            <input type="text" class="form-control" id="Cargo" name="Cargo" required />
        </div>

        <!-- Campo de Email con input-group -->
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <div class="input-group">
                <input type="text" class="form-control" id="NombreUsuario" name="Email" placeholder="nombre" 
                       oninput="autocompletarEmail()" required />
                <span class="input-group-text">@@e-car.com</span>
            </div>
            <div class="form-text">El correo se completará automáticamente con @@e-car.com.</div>
        </div>

        <!-- Campo para Contraseña -->
        <div class="mb-3">
            <label for="Contrasena" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="Contrasena" name="Contrasena" minlength="8" maxlength="50" required />
            <div class="form-text">Debe tener entre 8 y 50 caracteres.</div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-save"></i> Guardar Empleado
            </button>
            <a href="@Url.Action("Index", "Empleado")" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
    </form>
</div>

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #f4f4f9;
        color: #333;
        font-family: 'Roboto', sans-serif;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
    }

    form {
        border: 1px solid #ddd;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
</style>

<!-- JavaScript para completar automáticamente el email y concatenar el dominio -->
<script>
    function autocompletarEmail() {
        const nombreUsuarioInput = document.getElementById("NombreUsuario");
        const emailValue = nombreUsuarioInput.value;
        if (emailValue && !emailValue.includes('@@')) {
            nombreUsuarioInput.value = emailValue; // Mantén solo el nombre de usuario
        }
    }

    function concatenarEmail() {
        const nombreUsuarioInput = document.getElementById("NombreUsuario");
        const emailValue = nombreUsuarioInput.value;
        if (emailValue && !emailValue.includes('@@')) {
            nombreUsuarioInput.value = emailValue + "@@e-car.com"; // Concatenar el dominio antes de enviar
        }
    }
</script>
